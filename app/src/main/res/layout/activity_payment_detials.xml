<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reservationform.PaymentDetails">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/backArrow"
            style="@style/backImageView"
            android:src="@drawable/leftarrow" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:src="@drawable/payment"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/totalcostTV"
            android:text="@string/total_cost"
           style="@style/CustomLocationTextViewStyle"
            />
        <EditText
            android:id="@+id/visaIDinput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_your_visa_id"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/confirmBtn"
            android:onClick="ValidatePayment"
            tools:layout_editor_absoluteY="692dp" />








    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>